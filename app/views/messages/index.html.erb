<div class="panel panel-primary">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    
<% @messages.each do |message| %>

      <span class="label label-info"><%= message.name %>さん</span>
        
<span class="label label-warning"><%= message.age %>歳</span>

<%= message.body %>

        
<%= link_to "編集" , edit_message_path(message) %>

<%= link_to "削除" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
        

      <br>
    
<% end %>

  </div>
</div>

<%= render 'form' %>